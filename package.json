{
  "name": "claudebox",
  "version": "1.0.0",
  "main": "out/main/main.js",
  "scripts": {
    "dev": "electron-vite dev",
    "start": "electron-vite preview",
    "build": "electron-vite build",
    "build:win": "npm run build && electron-builder --win portable",
    "build:mac": "npm run build && electron-builder --mac dmg",
    "lint": "echo \"No lint configured\"",
    "postinstall": "patch-package"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "Desktop UI for running Claude Code and Codex sessions.",
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^27.3.11",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^4.0.1",
    "patch-package": "^8.0.1",
    "vite": "^7.1.9"
  },
  "optionalDependencies": {
    "@homebridge/node-pty-prebuilt-multiarch": "^0.13.1"
  },
  "build": {
    "appId": "com.samkl.claudebox",
    "productName": "ClaudeBox",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/node-pty/**/*",
      "node_modules/@homebridge/node-pty-prebuilt-multiarch/**/*"
    ],
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/renderer/assets/images/app-icon.ico"
    },
    "portable": {
      "artifactName": "ClaudeBox-Portable.exe"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "artifactName": "ClaudeBox-${arch}.${ext}"
    },
    "dmg": {
      "artifactName": "ClaudeBox-${arch}.dmg",
      "title": "ClaudeBox ${version}",
      "icon": "src/renderer/assets/images/app-icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
